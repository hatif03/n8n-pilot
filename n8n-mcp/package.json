{
	"name": "n8n-mcp-server",
	"version": "0.1.0",
	"description": "MCP server for building and managing n8n workflows using FastMCP",
	"main": "dist/index.js",
	"type": "module",
	"private": true,
	"bin": {
		"n8n-mcp-server": "dist/index.js"
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsc && shx chmod +x dist/index.js",
		"watch": "tsc --watch",
		"start": "node dist/index.js",
		"dev": "npx fastmcp dev src/index.ts",
		"inspect": "npx fastmcp inspect src/index.ts",
		"clean": "rm -rf dist",
		"rebuild": "npm run clean && npm run build"
	},
	"publishConfig": {
		"access": "public"
	},
  "dependencies": {
    "fastmcp": "^3.16.0",
    "zod": "^4.1.5",
    "uuid": "^9.0.1",
    "@types/uuid": "^10.0.0",
    "node-fetch": "^2.6.7",
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "axios": "^1.11.0",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "lru-cache": "^11.2.1"
  },
	"devDependencies": {
		"@types/node": "^24.3.1",
		"shx": "^0.4.0",
		"typescript": "^5.9.2"
	}
}

ADK_DEBUG="false" # enable this for framework logs

# N8n Workflow Intelligence Platform Environment Configuration

# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# N8N Configuration (Required)
N8N_HOST=http://localhost:5678
N8N_API_KEY=your_n8n_api_key_here

# Database Services
# Supabase (Optional - for relational data storage)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Neo4j (Required for graph database functionality)
NEO4J_URI=bolt://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your_neo4j_password

# Vector Database (Required for semantic search)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key

# AI Services (At least one required)
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# MCP Server Configuration
MCP_SERVER_PORT=3001
MCP_SERVER_HOST=localhost

# Security (Optional)
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_GRAPH_DB=true
ENABLE_MCP_SERVERS=true
ENABLE_AGENT_COLLABORATION=true

# Development/Testing
# Set to 'true' to enable debug logging
DEBUG=false

# Database Connection Pools
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES=10

# Workflow Processing
MAX_WORKFLOW_NODES=100
MAX_WORKFLOW_CONNECTIONS=200
WORKFLOW_TIMEOUT=300000

# Agent Configuration
AGENT_MAX_CONCURRENT_TASKS=5
AGENT_TASK_TIMEOUT=60000
AGENT_MEMORY_LIMIT=1000000

# MCP Server Configuration
MCP_MAX_CONNECTIONS=50
MCP_REQUEST_TIMEOUT=30000
MCP_HEARTBEAT_INTERVAL=30000

# Logging Configuration
LOG_FILE_PATH=logs/platform.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Cache Configuration
CACHE_TTL=3600000
CACHE_MAX_SIZE=1000

# Notification Configuration
NOTIFICATION_EMAIL_FROM=noreply@example.com
NOTIFICATION_EMAIL_SMTP_HOST=smtp.example.com
NOTIFICATION_EMAIL_SMTP_PORT=587
NOTIFICATION_EMAIL_SMTP_USER=your_smtp_user
NOTIFICATION_EMAIL_SMTP_PASS=your_smtp_password

# External Service URLs
EXTERNAL_API_BASE_URL=https://api.example.com
EXTERNAL_API_TIMEOUT=30000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Workflow Templates
TEMPLATE_REPOSITORY_URL=https://github.com/example/workflow-templates
TEMPLATE_UPDATE_INTERVAL=86400000

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Monitoring and Alerting
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL_ADDRESS=alerts@example.com
ALERT_THRESHOLD_ERROR_RATE=0.1
ALERT_THRESHOLD_RESPONSE_TIME=5000